<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sage42.android.view_samples"
    android:versionCode="1"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <supports-screens android:anyDensity="true" />

    <!-- Settings required by application -->

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.sage42.android.view_samples.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sage42.android.view_samples.ui.CircularProgressBarActivity"
            android:label="@string/menu_circular_progress_bar" />
        <activity
            android:name="com.sage42.android.view_samples.ui.SegmentedProgressBarActivity"
            android:label="@string/menu_segmented_progress_bar" />
        <activity
            android:name="com.sage42.android.view_samples.custom_fonts.CustomFontsActivity"
            android:label="@string/menu_custom_font_views" />
        <activity
            android:name="com.sage42.android.view_samples.marquee.MarqueeTextActivity"
            android:label="@string/menu_marquee_text" />
        <activity
            android:name="com.sage42.android.view_samples.SwipeEnabledActivity"
            android:label="@string/title_activity_swipe_enabled" />
    </application>

</manifest>