<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/std_padding"
    android:paddingRight="@dimen/std_padding"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_item_header"
        style="@style/AppTheme.MenuItem.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/menu_item_header_underline"
        android:layout_width="match_parent"
        android:layout_below="@+id/menu_item_header"
        android:layout_height="1dp"
        android:background="@color/general_title_divider_color" />
    
     <View
        android:id="@+id/menu_item_content_underline"
          android:layout_below="@+id/menu_item_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/general_divider_color" />

    <TextView
        android:id="@+id/menu_item_content"
        style="@style/AppTheme.MenuItem"
          android:layout_below="@+id/menu_item_content_underline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_launcher" />
    
       

</RelativeLayout>