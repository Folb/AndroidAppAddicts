<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:padding="@dimen/std_padding">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/std_padding"
        android:background="@drawable/card_shadow" >

        <!-- Episode Number -->
        <TextView
            android:id="@+id/episode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/content_padding"
            android:text="@string/apps_default_episode_number"
            android:textSize="50dp"
            android:textColor="@color/green" />

        <!-- Episode Details Container -->
        <RelativeLayout
            android:id="@+id/episode_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/episode_number"
            android:orientation="horizontal"
            android:paddingTop="@dimen/std_padding" >

            <!-- Episode Title -->
            <TextView
                android:id="@+id/episode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/std_hlf_padding"
                android:text="@string/apps_default_episode_title"
                android:textSize="18dp" />

            <!-- Episode Duration -->
            <TextView
                android:id="@+id/episode_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/episode_title"
                android:singleLine="true"
                android:text="@string/apps_default_episode_duration"
                android:textColor="@color/general_text_light"/>

            <!-- Episode Date
            <TextView
                android:id="@+id/episode_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/episode_duration"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:text="@string/apps_default_loading"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />-->

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>