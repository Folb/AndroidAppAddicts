<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Menu">
        <item name="android:divider">@color/menu_divider</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppTheme.MenuItem">
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/std_padding</item>
        <item name="android:paddingLeft">@dimen/std_padding</item>
        <item name="android:paddingRight">@dimen/std_padding</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.MenuItem.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textColor">@color/general_title_color</item>
        <item name="android:paddingTop">@dimen/std_padding</item>
    </style>

</resources>