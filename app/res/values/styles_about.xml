<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.About"></style>

    <style name="AppTheme.About.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/std_padding</item>
        <item name="android:paddingRight">@dimen/std_padding</item>
        <item name="android:drawablePadding">@dimen/std_padding</item>
        <item name="android:background">@drawable/btn_click_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme.About.TopPanel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/general_text_primary</item>
        <item name="android:padding">@dimen/std_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.About.Hr">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/std_padding</item>
        <item name="android:layout_marginRight">@dimen/std_padding</item>
        <item name="android:background">@color/general_divider_color</item>
    </style>

</resources>